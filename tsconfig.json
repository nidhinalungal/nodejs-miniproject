{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./@types", "./types"] // Include this if you use a custom folder for types
  },
  "include": ["src/**/*.ts", "ormconfig.ts", "src/**/express.d.ts"],
  "exclude": ["node_modules"]
}